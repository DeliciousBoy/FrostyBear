@model IEnumerable<FrostyBear.ViewModels.PdVM>
@{

}
@{
    var stext = ViewBag.stext;
}

<h1>Product Page</h1>
<form asp-controller="Product" asp-action="Index">
    <div class="row">
        <div class="col-sm-6 col-md-8 col-lg-9"></div>
        <div class="col-sm-6 col-md-4 col-lg-3">
            <div class="input-group">
                <span class="input-group-text">Search</span>
                <input type="text" name="stext" class="form-control" value="@stext" />
                <button type="submit" class="btn btn-secondary">OK</button>
            </div>
        </div>
    </div>


</form>

<table>
    <tr>
        <th></th>
        <th>Product ID</th>
        <th>Name</th>
        <th>Category</th>
        <th>Brands</th>
        <th>Price</th>
        <th>Details</th>
        <!---->
    </tr>
    @if (Model != null)
    {
        var i = 0;
        foreach (var item in Model)
        {
            i++;
            <tr>
                <td>@i</td>
                <td>@item.ProductId</td>
                <td>@item.ProductName</td>
                <td>@item.CategoryName</td>
                <td>@item.BrandName</td>
                <td>@item.ProductPrice</td>
                <td>@item.Detail</td>
            </tr>
        }
    }
    else
    {
        <tr><td colspan="7">No products found</td></tr>
    }

</table>